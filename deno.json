{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "imports": {
    "std/": "https://deno.land/std@0.178.0/",
    "grammy": "https://deno.land/x/grammy@v1.14.1/mod.ts",
    "seonbi": "https://deno.land/x/seonbi@0.3.6/mod.ts"
  },
  "checkJs": true,
  "compilerOptions": {
    "allowJs": false,
    "strict": true
  },
  "fmt": {
    "options": {
      "lineWidth": 80
    }
  },
  "tasks": {
    "run": "deno run --allow-all --check --lock=deno.lock bot.ts"
  }
}
